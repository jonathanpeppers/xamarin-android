    "version": "0.2.0",
    "configurations": [
        {
            "name": "MSBuild Tests",
            "type": "mono",
            "request": "launch",
            "program": "${workspaceRoot}packages/NUnit.ConsoleRunner.3.9.0/tools/nunit3-console.exe ${workspaceRoot}bin/TestDebug/Xamarin.Android.Build.Tests.dll",
            "cwd": "${workspaceRoot}bin/TestDebug/"
        },
        {
            "name": "Attach",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 55555
        },
        {
            "name": "Debug Hello World",
            "type": "mono",
            "request": "attach",
            "address": "localhost",
            "port": 10000,
            "preLaunchTask": "Run Hello World",
        }
    ]
}